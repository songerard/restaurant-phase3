<!-- show restaurant details page -->
<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="row d-flex justify-content-end">
        <a href="/restaurants/{{ restaurant._id }}/edit" class="btn btn-success mx-2">修改</a>
        <button type="button" class="btn btn-sm btn-danger mx-2 delete-btn" data-toggle="modal"
          data-target="#deleteModal" data-id="{{ restaurant._id }}" data-name="{{ restaurant.name }}"
          data-category="{{ restaurant.category }}">刪除</button>
        <a class="btn btn-secondary ml-3" href="/">返回</a>
      </div>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href={{ restaurant.google_map }} class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5">
        {{ restaurant.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src={{ restaurant.image }} alt={{ restaurant.name }}
        style="max-width: 600px;">
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="ModalLabel">確認刪除餐廳資料</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- render by js -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <form action="<!-- render by js -->" method="POST" style="display: inline;" class="delete-form">
          <button type="submit" class="btn btn-danger">刪除</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/modal.js"></script>